<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6"
    android:orientation="vertical"
    tools:context=".Passo3">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#007EC5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="97dp"
            app:srcCompat="@drawable/image"
            android:layout_marginLeft="-30dp"/>

        <TextView
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="5dp"
            android:text="@string/header"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="100dp"
            app:layout_constraintVertical_bias="0.5" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:layout_marginTop="50dp"
        android:background="#EEEFEF">

        <TextView
            android:id="@+id/textViewPasso3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_bold"
            android:text="Passo 3"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />
    </FrameLayout>


    <View
        android:layout_width="292dp"
        android:layout_height="2dp"
        android:layout_marginLeft="118dp"
        android:background="#EEEFEF" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horários Disponíveis!"
        android:textColor="#D75452"
        android:fontFamily="@font/inter_bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="135dp"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:columnCount="3"
        android:rowCount="4"
        android:padding="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Manhã"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:background="#B0C4DE"
            android:layout_columnSpan="1"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tarde"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:background="#B0C4DE"
            android:layout_columnSpan="1"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Noite"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:background="#B0C4DE"
            android:layout_columnSpan="1"/>

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="09:30"
            android:textColor="#000000"
            android:background="#E0E0E0"
        android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="13:30"
            android:textColor="#000000"
            android:background="#E0E0E0"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="18:45"
            android:textColor="#000000"
            android:background="#E0E0E0"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="10:45"
            android:textColor="#000000"
            android:background="#A0C4FF"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="14:00"
            android:textColor="#000000"
            android:background="#A0C4FF"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="19:00"
            android:textColor="#000000"
            android:background="#A0C4FF"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="11:15"
            android:textColor="#000000"
            android:background="#E0E0E0"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="16:30"
            android:textColor="#000000"
            android:background="#E0E0E0"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="20:15"
            android:textColor="#000000"
            android:background="#E0E0E0"
            android:layout_marginTop="10dp"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonVolta3"
            android:layout_width="155dp"
            android:layout_height="48dp"
            android:onClick="telaAnterior3"
            android:text="Anterior"
            android:backgroundTint="@color/btnsColor"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/buttonPasso3"
            android:layout_width="155dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:onClick="proximaTela3"
            android:text="Próximo"
            android:backgroundTint="@color/btnsColor"
            android:textColor="#fff"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="50dp"
        android:background="#EEEFEF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/inter_bold"
        android:text="* Campo em vermelho são de preenchimento obrigatório!"
        android:textAlignment="center"
        android:textColor="#D75452" />

</LinearLayout>
