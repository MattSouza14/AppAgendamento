<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6"
    android:orientation="vertical"
    tools:context=".Passo2">

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#0C0C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingExtra="5dp"
            android:text="Centro de Pneumologia e Alergia do Ceará Sistema de Marcação de Consulta"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="214dp" />

    </FrameLayout>



    <FrameLayout
        android:id="@+id/frameLayout5"
        android:layout_width="119dp"
        android:layout_height="33dp"
        android:background="#EEEFEF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_bold"
            android:text="Passo 2"
            android:textAlignment="center"
            android:textSize="20sp" />
    </FrameLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="292dp"
        android:layout_height="1dp"
        android:layout_marginLeft="118dp"
        android:background="#EEEFEF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="278dp"
        android:layout_height="24dp"
        android:fontFamily="@font/inter_bold"
        android:text="Data de Nascimento do Paciente"
        android:textAlignment="viewStart"
        android:textColor="#D75452"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp" />

    <EditText
        android:id="@+id/etDataNascimento"
        android:layout_width="360dp"
        android:layout_height="54dp"
        android:hint="Selecione a data"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:clickable="true"
        android:layout_marginLeft="30dp"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:drawableEnd="@drawable/calendario"/>
    <TextView
        android:id="@+id/textView11"
        android:layout_width="278dp"
        android:layout_height="24dp"
        android:fontFamily="@font/inter_bold"
        android:text="Plano"
        android:textAlignment="viewStart"
        android:textColor="#D75452"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="360dp"
        android:layout_height="54dp"
        android:layout_marginLeft="30dp" />
    <TextView
        android:id="@+id/textView12"
        android:layout_width="278dp"
        android:layout_height="24dp"
        android:fontFamily="@font/inter_bold"
        android:text="Médico"
        android:textAlignment="viewStart"
        android:textColor="#D75452"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <Spinner
        android:id="@+id/spinnerMedico"
        android:layout_width="360dp"
        android:layout_height="54dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="278dp"
        android:layout_height="24dp"
        android:fontFamily="@font/inter_bold"
        android:text="Datas  disponíveis"
        android:textAlignment="viewStart"
        android:textColor="#D75452"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>

    <Spinner
        android:id="@+id/spinnerDatas"
        android:layout_width="360dp"
        android:layout_height="54dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:onClick="trocar"
        android:text="Próximo"
        android:layout_marginBottom="-50dp"
        android:layout_marginLeft="230dp"
        android:backgroundTint="#0C0C0C"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:onClick="telaAnterior"
        android:text="Anterior"
        android:layout_marginBottom="-50dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#0C0C0C"/>
    <View
        android:id="@+id/view4"
        android:layout_width="410dp"
        android:layout_height="1dp"
        android:layout_marginTop="90dp"
        android:background="#EEEFEF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:fontFamily="@font/inter_bold"
        android:text="* Campo em vermelho são de preenchimento obrigatório!"
        android:textAlignment="center"
        android:textColor="#D75452"
        android:layout_marginTop="25dp" />
</LinearLayout>